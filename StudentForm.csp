<html>
<head>
    <title>Student form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f4f8;
            margin: 20px;
        }
        h2 {
            margin-bottom: 10px;
        }
        form {
            background: #ffffff;
            padding: 12px 16px;
            border-radius: 6px;
            box-shadow: 0 0 4px rgba(0,0,0,0.1);
            max-width: 320px;
        }
        label {
            display: block;
            margin-top: 8px;
            font-size: 14px;
        }
        input[type="text"] {
            width: 100%;
            padding: 5px 8px;
            margin-top: 2px;
            box-sizing: border-box;
        }
        .buttons {
            margin-top: 10px;
        }
        .buttons input,
        .buttons a {
            display: inline-block;
            padding: 4px 10px;
            margin-right: 6px;
            border-radius: 4px;
            border: 1px solid #007bff;
            text-decoration: none;
            font-size: 14px;
        }
        .buttons input[type="submit"] {
            background: #007bff;
            color: white;
        }
        .buttons a {
            background: #ffffff;
            color: #007bff;
        }
    </style>
</head>
<body>

<h2>Student</h2>

<form method="post" action="/csp/user/Online.StudentCSPService.cls">
    <input type="hidden" name="action" value="save">

    <input type="hidden" name="ID" value="#(%request.Get("ID"))#">

    <label>
        Name:
        <input type="text" name="FullName" value="">
    </label>

    <label>
        Email:
        <input type="text" name="Email" value="">
    </label>

    <div class="buttons">
        <input type="submit" value="Save">
        <a href="/csp/user/StudentsList.csp">Cancel</a>
    </div>
</form>

</body>
</html>
